<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/u_color_f8f8f8"
    android:orientation="vertical">

    <com.sz.ucar.bwued.lib.ULabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:background="@color/u_color_ffffff"
        android:padding="@dimen/dd_dimen_20px"
        android:text="双列单选"
        app:layoutRule="labelBottom">

        <com.sz.ucar.bwued.lib.USelectionLayout
            android:id="@+id/test_select_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sl_column="2"
            app:sl_isPickOne="true"
            app:sl_optionList="@array/test_array"
            app:sl_selectedIndex="0" />
    </com.sz.ucar.bwued.lib.ULabelLayout>

    <com.sz.ucar.bwued.lib.ULabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:background="@color/u_color_ffffff"
        android:padding="@dimen/dd_dimen_20px"
        android:text="双列多选"
        app:layoutRule="labelBottom">

        <com.sz.ucar.bwued.lib.USelectionLayout
            android:id="@+id/test_select_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sl_column="2"
            app:sl_isPickOne="false"
            app:sl_optionList="@array/test_array_2"
            app:sl_selectedIndex="0,1" />
    </com.sz.ucar.bwued.lib.ULabelLayout>

    <com.sz.ucar.bwued.lib.ULabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:background="@color/u_color_ffffff"
        android:padding="@dimen/dd_dimen_20px"
        android:text="单列单选"
        app:layoutRule="labelBottom">

        <com.sz.ucar.bwued.lib.USelectionLayout
            android:id="@+id/test_select_group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sl_column="1"
            app:sl_isPickOne="true"
            app:sl_isTickFront="false"
            app:sl_optionList="@array/test_array"
            app:sl_selectedIndex="0" />
    </com.sz.ucar.bwued.lib.ULabelLayout>

    <com.sz.ucar.bwued.lib.ULabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:background="@color/u_color_ffffff"
        android:padding="@dimen/dd_dimen_20px"
        android:text="单列多选"
        app:layoutRule="labelBottom">

        <com.sz.ucar.bwued.lib.USelectionLayout
            android:id="@+id/test_select_group_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:sl_column="1"
            app:sl_isPickOne="false"
            app:sl_isTickFront="false"
            app:sl_optionList="@array/test_array_2"
            app:sl_selectedIndex="0,1" />
    </com.sz.ucar.bwued.lib.ULabelLayout>
</LinearLayout>