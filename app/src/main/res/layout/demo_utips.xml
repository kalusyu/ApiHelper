<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sz.ucar.bwued.lib.forminput.UFormInputLayout
        android:id="@+id/ufll_utips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="维修"
        app:key="subscribe_type"
        app:label="预约类型"
        app:type="select" />



    <com.sz.ucar.bwued.lib.ULoadingButton
        android:id="@+id/ulbt1"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="30dp"
        app:progressColor="#235345"
        android:gravity="center"
        app:text="popMenu"
        android:background="#00f"
        app:textColor="#fff"
        app:textSize="16sp" />

    <Button
        android:id="@+id/ulbt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pickTime"
        android:visibility="visible" />

    <Button
        android:id="@+id/ulbt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="input"
        android:visibility="visible" />

    <Button
        android:id="@+id/ulbt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lift"
        android:visibility="visible" />

    <Button
        android:id="@+id/ulbt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loading"
        android:visibility="visible" />

    <Button
        android:id="@+id/ulbt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:visibility="visible" />

    <Button
        android:id="@+id/ulbt7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="share"
        android:visibility="visible" />


</LinearLayout>